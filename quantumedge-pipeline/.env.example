# ==============================================================================
# DATABASE CONNECTION
# ==============================================================================
# PostgreSQL database hostname or IP address
POSTGRES_HOST=localhost

# PostgreSQL server port (default: 5432)
POSTGRES_PORT=5432

# Database name for the application
POSTGRES_DB=quantumedge

# Database username for authentication
POSTGRES_USER=qe_user

# Database password (CHANGE IN PRODUCTION!)
POSTGRES_PASSWORD=qe_pass

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
# API server bind address (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
API_HOST=0.0.0.0

# API server port
API_PORT=8000

# Enable debug mode (provides detailed error messages, auto-reload)
DEBUG=true

# ==============================================================================
# QUANTUM SIMULATOR SETTINGS
# ==============================================================================
# Quantum backend selection: 'simulator', 'ibm_quantum', 'aws_braket'
QUANTUM_BACKEND=simulator

# Number of shots (circuit executions) for quantum measurements
QUANTUM_SHOTS=1000

# Noise model for realistic quantum simulation: 'none', 'depolarizing', 'thermal'
QUANTUM_NOISE_MODEL=none

# ==============================================================================
# EDGE ENVIRONMENT PROFILES
# ==============================================================================
# Power budget in watts for edge device constraints
EDGE_POWER_BUDGET_WATTS=50

# Maximum thermal limit in Celsius before throttling
EDGE_THERMAL_LIMIT_CELSIUS=85

# Available memory on edge device in megabytes
EDGE_MEMORY_MB=4096

# Number of CPU cores available on edge device
EDGE_CPU_CORES=4

# Maximum execution time allowed for optimization tasks (seconds)
EDGE_MAX_EXECUTION_TIME_SEC=300

# ==============================================================================
# LOGGING
# ==============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
